<Window x:Class="AzubiFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzubiFlow"
        xmlns:UserControls="clr-namespace:AzubiFlow.View.UserControls"
        mc:Ignorable="d"
        Title="AzubiFlow" Height="600" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="2" Grid.Row="0">
            
            <TextBlock Text="Select Task Flow" Margin="5 5 0 0"/>
            <ComboBox Margin="5 0 5 0" Foreground="White">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Background" Value="Blue"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
            <TextBlock Text="Flow Task" Margin="5 5 0 0"/>
            <UserControls:ClearableTextBox Width="250" HorizontalAlignment="Left" Margin="5 0 5 0" Placeholder="Enter Task Here"/>

        </StackPanel>

        
    </Grid>
</Window>
